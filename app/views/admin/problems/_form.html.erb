<%= form_for [:admin, @contest, @problem] do |f| %>
  <%= render partial: 'application/form_errors', locals: {error: :problem_error} %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :description, class: "label" %>
    <div class="control">
      <%= f.text_area :description, class: "textarea"%>
    </div>
  </div>
  <hr />
  <div class="field">
    <%= f.label :problem_data, "Upload problem data (*.in, *.out)", class: "label has-text-weight-normal" %>
    <div class="control">
      <%= f.file_field :problem_data, multiple: true %>
    </div>
  </div>
  <hr />
  <div class="field">
    <div class="control">
      <%= f.submit class: "button is-primary" %>
    </div>
  </div>
<% end %>

