<%= form_for [:admin, @contest] do |f| %>
  <ul>
    <% @contest.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit class: "button is-primary" %>
    </div>
  </div>
<% end %>
