<h1 class="title"><%= Contest.model_name.human count: :many %></h1>
<% if @contests.length > 0 %>
  <div class="table-container">
    <table class="table is-fullwidth is-hoverable">
      <thead>
        <tr>
          <%= render partial: 'contests/table_headings' %>
          <th><%= t 'actions.edit' %></th>
          <th><%= t 'actions.delete' %></th>
        </tr>
      </thead>
      <tbody>
        <% @contests.each do |contest| %>
          <tr>
            <%= render partial: 'contests/contest', locals: {contest: contest} %>
            <td>
              <%= button_to t('actions.edit'), edit_admin_contest_path(contest), method: :get, class: "button"%>
            </td>
            <td>
              <%= button_to t('actions.delete'), admin_contest_path(contest), method: :delete, class: "button is-danger"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<h2 class="title is-4"><%= t 'contests.form.create' %></h2>
<%= render partial: 'admin/contests/form', :locals => {contest: @contest} %>

